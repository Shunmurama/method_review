<div class='col-md-8 offset-md-1'>
      <h2>メソッドの説明</h2>

  <%= form_with model: @practice, url: practices_path, method: :post do |f| %>
      <div>
        <%= f.label :method, "メソッド名" %>
        <%= f.text_field :method %>
      </div>
      <div>
        <%= f.label :text, "説明" %>
        <%= f.text_area :text %>
      </div>
      <div>
        <%= f.submit "登録" %>
      </div>

  <% end %>

 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>説明</th>
    </tr>
  </thead>

  <tbody>
    <% @practices.each do |practice| %>
      <tr>
        <td><%= practice.method %></td>
        <td><%= practice.text %></td>
      </tr>
    <% end %>
  </tbody>
 </table>